<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/css/login.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <h2>Login</h2>
    <form action="/auth/login" method="POST">
        <input type="text" name="username" placeholder="username" required>
        <input type="password" name="password" placeholder="password" required>
        <button id="done" type="submit">Login</button>
        <span>New User -<a href="/auth/register">register</a></span>
    </form>

    <% if (error) { %>
        <script>
            Swal.fire({
                // icon: 'error',
                title: 'Error!',
                text: '<%= error %>',
                timer: 1550,
            });
        </script>
    <% } %>

    <% if (success) { %>
        <script>
            Swal.fire({
                // icon: "success",
                title: 'Success!',
                text: '<%= success %>',
                timer:1550,
            });
        </script>
    <% } %>

</body>
</html>